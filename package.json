{
  "name": "furnio",
  "version": "1.0.0",
  "description": "e-commerce for furnitures",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "format": "prettier --ignore-path .prettierignore \"{backend,frontend}/**/*.{ts,tsx,js,json}\"",
    "format:check": "npm run format -- --check",
